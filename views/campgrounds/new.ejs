<% include ../partials/header %>

    <div class="row">
        <h1 style="text-align: center;color:#3373FF">新增美麗景點</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <label for="name">旅遊主題<span style="color:red;"> *</span></label>
                    <input class="form-control" type="text" name="name" placeholder="例如：日月潭" required>
                </div>
                <div class="form-group">
                    <label for="image">照片網址<span style="color:red;"> *</span></label>
                    <input class="form-control" type="url" name="image1" placeholder="請至少上傳一張照片 (請輸入連結檔網址) " required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="url" name="image2" placeholder="照片2 (請輸入連結檔網址) " >
                </div>
                <div class="form-group">
                    <input class="form-control" type="url" name="image3" placeholder="照片3 (請輸入連結檔網址) " >
                </div>
                <div class="form-group">
                <label for="location">地點位置<span style="color:red;"> *</span></label>
                <input class="form-control" type="text" name="location" id="locationTextField" placeholder="地址 或 大概位置 (例如：台北車站)" required>
                </div>
                <div class="form-group">
                <label for="cost">此次旅遊花費 (大約)<span style="color:red;"> *</span></label>
                <input class="form-control" type="text" name="cost" placeholder="最多6位數" maxlength="6" required>
                </div>
                <div class="form-group">
                    <label for="description">旅遊行程內容描述<span style="color:red;"> *</span></label>
                    <textarea class="form-control" type="text" id="userInput" onkeyup="wordsTotal()" onkeydown="if (this.value.length >=1000) {return false;}" name="description" rows="10" cols="50" placeholder="最多1000字" required></textarea>
                    <br>
                    您還可輸入<span id="display">1000</span>個字
                </div>
                <P>
                打<span style="color:red;"> * </span>為必填欄位
                </P>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block" onclick="this.disabled=true; form.submit();">確定送出</button>
                </div>
            </form>
            <a href="/campgrounds">回上一頁</a>
        </div>
    </div>
    
    <script type="text/javascript">
  function wordsTotal() {
   
    var total = document.getElementById('userInput').value.length;
     
    document.getElementById('display').innerHTML = 1000-total;
   
  }
</script>

<script>
    function init() {
        var input = document.getElementById('locationTextField');
        var autocomplete = new google.maps.places.SearchBox(input);
    }
    google.maps.event.addDomListener(window, 'load', init);
</script>
    
<% include ../partials/footer %>

