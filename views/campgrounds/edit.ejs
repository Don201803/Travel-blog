<% include ../partials/header %>
    <div class="row">
        <h1 style="text-align: center">編輯 <%= campground.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="name">旅遊主題<span style="color:red;"> *</span></label>
                    <input class="form-control" type="text" name="campground[name]" id="name" value="<%= campground.name %>" required>
                </div>
                <div class="form-group">
                    <label for="image">照片網址<span style="color:red;"> *</span></label>
                    <input class="form-control" type="url" name="campground[image1]" id="image1" value="<%= campground.image1 %>" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="url" name="campground[image2]" id="image2" value="<%= campground.image2 %>" >
                </div>
                <div class="form-group">
                    <input class="form-control" type="url" name="campground[image3]" id="image3" value="<%= campground.image3 %>" >
                </div>
                
                <div class="form-group">
                    <label for="location">地點位置<span style="color:red;"> *</span></label>
                    <input class="form-control" type="text" name="campground[location]" id="locationTextField" value="<%= campground.location %>" required>
                </div>
                
                <div class="form-group">
                <label for="cost">此次旅遊花費 (大約)<span style="color:red;"> *</span></label>
                <input class="form-control" type="text" name="campground[cost]" id="cost" maxlength="6" value="<%= campground.cost %>" required>
                </div>
                <div class="form-group">
                    <label for="description">旅遊行程內容描述<span style="color:red;"> *</span></label>
                    <textarea class="form-control" type="text" id="userInput" onkeyup="wordsTotal()" onkeydown="if (this.value.length >=1000) {return false;}" name="campground[description]" id="description" rows="10" cols="50" required><%= campground.description %></textarea>                    
                <br>
                     您還可輸入<span id="display">1000</span>個字
                </div>
                <P>
                打<span style="color:red;"> * </span>為必填欄位
                </P>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">確定更新</button>
                </div>
            </form>
            <a href="/campgrounds/<%= campground._id %>" >回上一頁</a>
            
        </div>
    </div>
    
        <script type="text/javascript">
  function wordsTotal() {
   
    var total = document.getElementById('userInput').value.length;
     
    document.getElementById('display').innerHTML = 1000-total;
   
  }
</script>

<script>
    function init() {
        var input = document.getElementById('locationTextField');
        var autocomplete = new google.maps.places.SearchBox(input);
    }
    google.maps.event.addDomListener(window, 'load', init);
</script>
    
<% include ../partials/footer %>

